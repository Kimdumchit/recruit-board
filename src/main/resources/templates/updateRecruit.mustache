{{>layouts/header}}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/recruit/{{recruit.recruitId}}/update" method="get" name="recruitForm" class="mt-5">
                <h2>보드게임 파티 모집 글 수정</h2>
                <div class="form-group">
                    <label for="title">제목</label>
                    <input id="title" type="text" name="title" value="{{recruit.title}}" class="form-control"/>
                </div>
                <div class="form-group">
                    <label for="content">내용</label>
                    <textarea id="content" name="content" class="form-control">{{recruit.content}}</textarea>
                </div>
                <div class="form-group">
                    <label for="maxCapacity">최대 인원</label>
                    <input id="maxCapacity" type="number" name="maxCapacity" value="{{recruit.maxCapacity}}" class="form-control"/>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="모집 글 수정" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>