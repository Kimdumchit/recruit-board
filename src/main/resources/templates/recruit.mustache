{{>layouts/header}}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-5">
                <div class="card-header">
                    <h5 class="card-title">{{recruit.title}}</h5>
                    <small class="text-muted">{{recruit.createdAt}}</small>
                </div>
                <div class="card-body">
                    <div class="content">
                        <h4><strong>내용:</strong></h4>
                        <p>{{recruit.content}}</p>
                    </div>
                    <div class="info mt-4">
                        <p><strong>현재 참여 인원:</strong> {{recruit.capacity}}</p>
                        <p><strong>최대 인원:</strong> {{recruit.maxCapacity}}</p>
                    </div>
                    <a href="/recruit/{{recruit.recruitId}}/join" class="btn btn-primary mt-3">참여하기</a>
                </div>
            </div>
        </div>
    </div>
</div>
