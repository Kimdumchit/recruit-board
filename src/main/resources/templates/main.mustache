{{>layouts/header}}
<div class="container">
    <div class="row mt-3">
        <div class="col-md-12 d-flex justify-content-end">
            <a href="/recruit/create" class="btn btn-primary">모집글 작성하기</a>
        </div>
    </div>
    <div class="row">
        {{#recruits}}
            <div class="col-md-4">
                <div class="card mt-5">
                    <div class="card-header">
                        <h5 class="card-title">{{title}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">글쓴이:{{ member.username }} </h6>
                    </div>
                    <div class="card-body">
                        <p class="card-text">현재 참여 인원: {{capacity}}</p>
                        <p class="card-text">최대 인원: {{maxCapacity}}</p>
                        <a href="/recruit/{{recruitId}}" class="btn btn-primary">자세히 보기</a>
                    </div>
                </div>
            </div>
        {{/recruits}}
    </div>
</div>